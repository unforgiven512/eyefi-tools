*.cc				eol=lf diff=cpp
*.h					eol=lf diff=cpp
*.hpp				eol=lf diff=cpp
*.hxx				eol=lf diff=cpp
*.hh				eol=lf diff=cpp
*.py				eol=lf diff=python
*.htm				eol=lf
*.html				eol=lf
*.xhtml				eol=lf
*.xml				eol=lf
*.xsl				eol=lf
*.xslt				eol=lf
*.xsd				eol=lf
*.css				eol=lf
*.js				eol=lf



#######################
